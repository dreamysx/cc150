public class addition {
    int add(int i, int j){
        if (j==0){return i;}
        int base = i ^ j;
        int advance = (i & j) << 1;
        return add(base, advance);
    }
    public static void main(String[] args) {
        int i =0;
        int j =23;
        addition a = new addition();
        int res = a.add(i, j);
        System.out.println(res);
    }
}
